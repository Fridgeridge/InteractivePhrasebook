    <sentence desc="Someone is married" id="AMarried">
        <node syntax="PQuestion">
            <node desc="How do you want to phrase it?" syntax="QProp">
                <node child="phraseit"></node>
                <node syntax="PropAction">
                    <node desc="Who are we talking about?" syntax="AMarried">
