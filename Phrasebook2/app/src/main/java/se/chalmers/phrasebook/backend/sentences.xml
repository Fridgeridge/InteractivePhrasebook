<?xml version="1.0" encoding="UTF-8"?>

<phrasebook>


    <sentence desc="What is somebody's name?" id="QWhatName">
        <node syntax="PQuestion">
            <node syntax="QWhatName">
                <node child="persons"></node>
                <node child="familypersons"></node>
            </node>
        </node>
    </sentence>


    <sentence desc="Somebody's name is..." id="AHasName">
        <node child="phraseit">
            <node syntax="PropAction">
                <node syntax="AHasName">
                    <node child="persons">
                        <node syntax="NameNN"></node>
                    </node>
                    <node child="familypersons">
                        <node syntax="NameNN"></node>
                    </node>
                </node>
            </node>
        </node>
    </sentence>


    <sentence desc="How old is someone?" id="QWhatAge">
        <node syntax="PQuestion">
            <node syntax="QWhatAge">
                <node child="persons"></node>
                <node child="familypersons"></node>
            </node>
        </node>
    </sentence>

    <child id="phraseit" question="How do you want phrase it?">
        <node desc="statement" syntax="PSentence">
            <node syntax="SProp"></node>
        </node>
        <node desc="question" syntax="PQuestion">
            <node syntax="QProp"></node>
        </node>
        <node desc="negation" syntax="PSentence">
            <node syntax="SPropNot"></node>
        </node>
    </child>


    <child id="persons" question="Who are we asking about?">
        <node desc="me (male)" syntax="IMale"></node>
        <node desc="me (female)" syntax="IFemale"></node>
        <node desc="you (a male friend)" syntax="YouFamMale"></node>
        <node desc="you (a female friend)" syntax="YouFamFemale"></node>
        <node desc="you (a male stranger)" syntax="YouPolMale"></node>
        <node desc="you (a female stranger)" syntax="YouPolFemale"></node>
    </child>

    <child id="familypersons" question="Who are we asking about?">
        <node desc="Wife of..." syntax="Wife">
            <node child="persons"></node>
        </node>
        <node desc="Husband of..." syntax="Husband">
            <node child="persons"></node>
        </node>
        <node desc="Daughter of..." syntax="Daughter">
            <node child="persons"></node>
        </node>
        <node desc="Son of..." syntax="Son">
            <node child="persons"></node>
        </node>
        <node desc="Children of..." syntax="Children">
            <node child="persons"></node>
        </node>
    </child>

</phrasebook>

