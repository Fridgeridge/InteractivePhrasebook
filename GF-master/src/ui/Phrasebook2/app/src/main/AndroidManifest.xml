<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.chalmers.phrasebook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Material.Light">
        android:name="android.support.multidex.MultiDexApplication">
        <activity
            android:name=".gui.activities.HelperActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.activities.FirstUsageActivity" />
        <activity android:name=".gui.activities.HomeScreenActivity" />
        <activity android:name=".gui.MainActivity" />
        <activity android:name=".gui.activities.PhraseListActivity" />
        <activity android:name=".gui.activities.TranslatorActivity" />
        <activity
            android:name=".gui.NavigationActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@android:style/Theme.Material.Light"></activity>
    </application>

</manifest>
